{
  "appId": "com.mainframe.onyx",
  "productName": "Onyx",
  "artifactName": "${productName}.${ext}",
  "directories": {
    "buildResources": "assets"
  },
  "extraResources": [
    {
      "from": "./bin/geth-${os}",
      "to": "bin/geth"
    },
    {
      "from": "./bin/swarm-${os}",
      "to": "bin/swarm"
    },
    {
      "from": "./bin/geth-${os}.exe",
      "to": "bin/geth.exe"
    },
    {
      "from": "./bin/swarm-${os}.exe",
      "to": "bin/swarm.exe"
    }
  ],
  "appImage": {
    "systemIntegration": "doNotAsk"
  },
  "linux": {
    "category": "Network",
    "target": "AppImage"
  },
  "mac": {
    "icon": "assets/icon.icns",
    "target": "dir"
  },
  "win": {
    "icon": "assets/icon.ico",
    "target": "nsis"
  }
}
