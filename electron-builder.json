{
  "appId": "com.mainframe.onyx",
  "productName": "Onyx",
  "artifactName": "${productName}.${ext}",
  "directories": {
    "buildResources": "assets"
  },
  "extraResources": {
    "from": "./bin/${os}",
    "to": "bin"
  },
  "linux": {
    "category": "Network",
    "target": "AppImage"
  },
  "mac": {
    "icon": "assets/icon.icns",
    "target": "dir"
  },
  "win": {
    "icon": "assets/icon.ico",
    "target": "nsis"
  }
}
