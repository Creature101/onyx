{
  "name": "onyx",
  "version": "0.1.0",
  "description": "Decentralized messaging application based on PSS",
  "main": "index.js",
  "repository": "git@github.com:thusfresh/onyx.git",
  "author": "Mainframe",
  "private": true,
  "scripts": {
    "start": "node scripts/start.js",
    "build": "node scripts/build.js && mv build app/build",
    "builder": "electron-builder",
    "build:binaries": "./scripts/build_binaries.sh",
    "build:binaries:lmw": "./scripts/build_binaries.sh -mwl",
    "clean": "del app/build",
    "dist": "yarn clean && yarn build && electron-builder",
    "electron": "electron app",
    "flow": "flow check",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "babel-runtime": "6.26.0",
    "buffer": "^5.0.7",
    "bytes": "^3.0.0",
    "draft-js": "^0.10.4",
    "graphql": "^0.10.5",
    "gsap": "^1.20.3",
    "lodash": "^4.17.4",
    "moment": "^2.19.2",
    "object-assign": "4.1.1",
    "promise": "8.0.1",
    "prop-types": "^15.6.0",
    "qrcode.react": "^0.7.2",
    "query-string": "^5.0.1",
    "raf": "3.4.0",
    "react": "^16.1.1",
    "react-apollo": "^1.4.16",
    "react-blockies": "^1.2.2",
    "react-dev-utils": "^4.2.1",
    "react-dom": "^16.1.1",
    "react-modal": "^3.1.0",
    "react-native-web": "^0.1.14",
    "react-redux": "^5.0.6",
    "react-virtualized": "^9.12.0",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "rxjs": "^5.5.1",
    "subscriptions-transport-ws": "^0.8.3",
    "whatwg-fetch": "2.0.3",
    "ws": "^3.3.2"
  },
  "devDependencies": {
    "autoprefixer": "7.1.6",
    "babel-core": "6.26.0",
    "babel-eslint": "7.2.3",
    "babel-jest": "20.0.3",
    "babel-loader": "7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chalk": "1.1.3",
    "css-loader": "0.28.7",
    "del-cli": "^1.1.0",
    "dotenv": "4.0.0",
    "electron": "~1.7.9",
    "electron-builder": "^19.45.5",
    "eslint": "4.10.0",
    "eslint-config-react-app": "^2.0.1",
    "eslint-loader": "1.9.0",
    "eslint-plugin-flowtype": "2.39.1",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "7.4.0",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.5",
    "flow-bin": "^0.59.0",
    "fs-extra": "3.0.1",
    "html-webpack-plugin": "2.29.0",
    "jest": "20.0.4",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-loader": "2.0.8",
    "prettier": "^1.8.2",
    "style-loader": "0.19.0",
    "sw-precache-webpack-plugin": "0.11.4",
    "url-loader": "0.6.2",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.9.4",
    "webpack-manifest-plugin": "1.3.2"
  },
  "jest": {
    "collectCoverageFrom": ["src/**/*.{js,jsx,mjs}"],
    "setupFiles": ["<rootDir>/config/polyfills.js"],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)":
        "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": ["[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "mjs",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "electron": "1.7"
          }
        }
      ],
      "react"
    ],
    "plugins": [
      "transform-class-properties",
      "transform-object-rest-spread",
      "transform-runtime"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
